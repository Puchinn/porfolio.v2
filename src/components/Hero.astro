---
const personalImageAlt = "Esteban Sayago Fernando";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import GitHub from "./icons/GitHub.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
import { getI18N } from "@/i18n";

const { preferredLocale } = Astro;
const { hero } = getI18N(preferredLocale);
---

<div class="max-w-2xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-32 object-cover"
      src="/me.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/esteban-sayago/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>{hero.badge}</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    {hero.title}
  </h1>
  <p
    set:html={hero.about}
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  />
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:estebansayagodev@gmail.com">
      <MailIcon class="size-7" />
      estebansayagodev@gmail.com
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/esteban-sayago/">
      <LinkedInIcon class="size-7" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/Puchinn">
      <GitHub class="size-7" />
      GitHub
    </SocialPill>
  </nav>
</div>
